<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:viewModels="clr-namespace:Seederly.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Seederly.Desktop.Views.ApiCodeGenerationView"
             x:DataType="viewModels:WorkspaceViewModel">
    <ScrollViewer>
        <Grid Margin="10" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto" ColumnDefinitions="*">
            
            <ComboBox x:Name="LanguageComboBox"
                      SelectedItem="{Binding SelectedLanguage}"
                      MinWidth="150"
                      Grid.Row="0" />
            
            <Button Content="Generate Code"
                    Command="{Binding GenerateCodeCommand}"
                    Margin="0,10,0,0"
                    Grid.Row="1" />
            
            <CheckBox IsChecked="{Binding GenerateBodyOnCodeGen}" Margin="0,10,0,0" Grid.Row="2">
                <TextBlock Text="Generate Body on Code Generation" />
            </CheckBox>
            
            <Grid Grid.Row="3" ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0" Text="Generated Code:" Margin="0,20,0,5" Classes="h3"/>
                <Button Grid.Column="2"
                        Classes="seederly-primary"
                        Content="{avalonia:MaterialIconExt Kind=ContentCopy}"
                        HorizontalAlignment="Center"
                        Click="CopyButton_Click" />
            </Grid>
            
            <TextBox x:Name="GeneratedCodeTextBox"
                     Text="{Binding GeneratedCode}"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     FontFamily="Consolas, Courier New, monospace"
                     FontSize="14"
                     Margin="0"
                     Grid.Row="4" />
            
        </Grid>
    </ScrollViewer>
</UserControl>
